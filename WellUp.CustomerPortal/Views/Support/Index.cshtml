<!-- WellUp.CustomerPortal/Views/Support/Index.cshtml -->
@model WellUp.CustomerPortal.Models.ViewModels.SupportViewModel
@{
    ViewData["Title"] = "Help & Support";
    Layout = "~/Views/Shared/Components/_CustomerLayout.cshtml";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <h1>@Model.PageTitle</h1>
                <p class="text-muted">@Model.PageDescription</p>
            </div>
        </div>
    </div>

    <!-- Support Options -->
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <div class="py-4">
                        <i class="fas fa-question-circle fa-3x text-primary mb-3"></i>
                        <h4>Frequently Asked Questions</h4>
                        <p class="text-muted">Find answers to common questions about our service.</p>
                    </div>
                    <a asp-action="Faq" class="btn btn-primary">
                        <i class="fas fa-chevron-right me-2"></i>View FAQs
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <div class="py-4">
                        <i class="fas fa-info-circle fa-3x text-primary mb-3"></i>
                        <h4>About Us</h4>
                        <p class="text-muted">Learn more about WellUp and our commitment to quality.</p>
                    </div>
                    <a asp-controller="Home" asp-action="About" class="btn btn-primary">
                        <i class="fas fa-chevron-right me-2"></i>Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <div class="py-4">
                        <i class="fas fa-phone-alt fa-3x text-primary mb-3"></i>
                        <h4>Contact Us</h4>
                        <p class="text-muted">Get in touch with our customer service team for help.</p>
                    </div>
                    <a href="#contact-section" class="btn btn-primary">
                        <i class="fas fa-chevron-right me-2"></i>Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Information -->
    <div class="row mb-5" id="contact-section">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Contact Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
         

                        <div class="col-md-6">
                            <h5 class="mb-3">Contact Methods</h5>
                            <div class="d-flex mb-3">
                                <div class="me-3">
                                    <i class="fas fa-phone fa-fw text-primary"></i>
                                </div>
                                <div>
                                    <p class="mb-1 fw-bold">Phone</p>
                                    <p class="mb-0">+63 917 508 1619</p>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <div class="me-3">
                                    <i class="fab fa-facebook-f fa-fw text-primary"></i>
                                </div>
                                <div>
                                    <p class="mb-1 fw-bold">Facebook</p>
                                    <p class="mb-0">
                                        <a href="https://www.facebook.com/profile.php?id=100066516890341" target="_blank" rel="noopener noreferrer">
                                            Well Up Water Industries
                                        </a>
                                    </p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-map-marker-alt fa-fw text-primary"></i>
                                </div>
                                <div>
                                    <p class="mb-1 fw-bold">Address</p>
                                    <p class="mb-0">4HVW+J4W, D Fajardo St, Angeles, Pampanga</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>