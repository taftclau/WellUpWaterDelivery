<!--Views/Home/Shared/Components/_Layout-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WellUp Water Delivery</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Poppins:wght@500;600;700&family=Raleway:wght@600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customer-portal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-styles.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/wellup-logo.png" alt="WellUp Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>About WellUp</h5>
                    <p>We're committed to delivering clean, fresh water to homes and offices across the city. Our mission is to keep you hydrated and healthy with reliable service.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Contact Us</h5>
                    <ul class="footer-links list-unstyled">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>4HVW+J4W, D Fajardo St, Angeles, Pampanga</li>
                        <li class="mb-2"><i class="fas fa-phone me-2"></i> +63 917 508 1619</li>
                        <li class="mb-2">
                            <i class="fab fa-facebook-f me-2"></i>
                            <a href="https://www.facebook.com/profile.php?id=100066516890341" target="_blank" rel="noopener noreferrer">
                                Well Up Water Industries
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="copyright mt-4 pt-4 border-top text-center">
                <p>&copy; @DateTime.Now.Year WellUp Water Delivery. All rights reserved.</p>
                <p class="tagline">Live well, choose well</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/customer-portal.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>