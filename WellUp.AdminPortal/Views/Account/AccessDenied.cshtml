<!-- AccessDenied.cshtml -->
@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center mt-5">
    <h1 class="text-danger">Access Denied</h1>
    <h6 class="mb-4">You do not have permission to view this resource.</h6>

    <div class="alert alert-info">
        <h5>Debug Info</h5>
        <p>Authentication status: @User.Identity?.IsAuthenticated</p>
        <p>Username: @User.Identity?.Name</p>
        <p>IsInRole("Admin"): @User.IsInRole("Admininistrator")</p>

        <h6>Claims:</h6>
        <ul class="list-group">
            @foreach (var claim in User.Claims)
            {
                <li class="list-group-item">@claim.Type: @claim.Value</li>
            }
        </ul>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Logout", "Account")" class="btn btn-primary">Logout and try again</a>
    </div>
</div>